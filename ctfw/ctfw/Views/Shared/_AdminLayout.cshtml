@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Admin Yönetim</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/Content/style.css" />

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/v4-shims.css">

    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />


    <script src="~/Scripts/jquery-3.5.1.min.js"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
</head>
<body class="index-bg-color">
    @Html.Partial("_Navbar")
    <div class="row complaints-center m-0">
        <div class="col-lg-8 modal-md-12 mt-3">
            @RenderBody()
        </div>
        <div class="modal-body col-lg-4 col-md-12 create-complaint p-3 center-item-grid">
            <a class="navbar-brand" href="/Home/Index">
                <img src="~/Content/images/logo.png" style="height: 50px" />
            </a>
            <div class="complaints-header center-item d-block p-2">
                <a href="/Admin/Index" class="d-block p-2 footer-navbar-link">Markalar</a>
                <a href="/Admin/Kullanıcılar" class="d-block p-2 footer-navbar-link">Kullanıcılar</a>
                <a href="/Admin/Complaints" class="d-block p-2 footer-navbar-link">Sikayetler</a>
                <a href="/Admin/Comments" class="d-block p-2 footer-navbar-link">Yorumlar</a>
            </div>
        </div>
    </div>


    
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

<script>
    $('.select2').select2();
</script>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>