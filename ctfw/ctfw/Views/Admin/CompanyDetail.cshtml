@model ctfw.Models.EntityFramework.Companys
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}
@* Marka Güncelleme *@
<br />
<h2>Marka Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("UpdateCompany", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.TextBoxFor(m => m.id, new { @class = "form-control fw-bold mb-3 p-2 button-input-round mb-2", placeholder = "ID", required = "required", @readonly = "readonly" })
    @Html.TextBoxFor(m => m.company, new { @class = "form-control fw-bold mb-3 p-2 button-input-round mb-2", placeholder = "Adı", required = "required", @readonly = "readonly" })
    @Html.TextBoxFor(m => m.company_text, new { @class = "form-control fw-bold mb-3 p-2 button-input-round mb-2", placeholder = "Şirket Açıklaması (Boş Bırakılabilir)" })
    <div class="create-complaint-title mt-2">
        <h3>Fotoğraf Yükle</h3>
    </div>
    <div class="m-3">
        <img id="output" class="img-thumbnail modal-round border-0" style="background-color: transparent !important">
        <input class="form-control modal-round form-control-md mt-2 modal-round border-0" style="background-color: transparent !important" accept="image/*" name="image" id="file" type="file" onchange="loadFile(event)" />
    </div>

    <button type="submit" class="btn btn-purple button-input-round">Kaydet</button>
}

<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>