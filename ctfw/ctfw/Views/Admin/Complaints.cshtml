@using ctfw.Models.EntityFramework
@model ViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@* Şikayetleri Tablo Olarak Getirme *@
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Şikayet Id</th>
            <th>Şikayet Başlığı</th>
            <th>Şikayet İçeriği</th>
            <th>Şikayet Yayın Tarihi</th>
            <th>Şikayet Durumu</th>
            <th>Sil</th>
            <th>Sitede Görüntüle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.ComplaintsList)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.complaint_header</td>
                <td>@x.complaint_text</td>
                <td>@x.complaint_releasedate</td>
                <td>@x.complaint_processstate</td>
                <td><a href="/Admin/DeleteComplaints/@x.id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a></td>
                <td><a href="/Home/SikayetDetay/@x.id" class="btn btn-dark" target="_blank"><i class="fas fa-eye"></i></a></td>
            </tr>

            
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Şikayet Id</th>
            <th>Şikayet Başlığı</th>
            <th>Şikayet İçeriği</th>
            <th>Şikayet Yayın Tarihi</th>
            <th>Şikayet Durumu</th>
            <th>Sil</th>
            <th>Sitede Görüntüle</th>
        </tr>
    </tfoot>
</table>

