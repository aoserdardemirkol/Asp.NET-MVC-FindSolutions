@using ctfw.Models.EntityFramework
@model ViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@* Yorumları Tablo Olarak Getirme *@
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Yorum Id</th>
            <th>Yorum Yapanın İsmi</th>
            <th>Yorum</th>
            <th>Yorum Yayın Tarihi</th>
            <th>Yorum Cevabı</th>
            <th>Sil</th>
            <th>Sitede Görüntüle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.CommentsList)
        {
        <tr>
            <td>@x.id</td>
            <td>@x.username</td>
            <td>@x.comment</td>
            <td>@x.comment_date</td>
            <td>@x.comment_answer</td>
            <td><a href="/Admin/DeleteComments/@x.id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a></td>
            <td><a href="/Home/SikayetDetay/@x.complaint_id" class="btn btn-dark" target="_blank"><i class="fas fa-eye"></i></a></td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Yorum Id</th>
            <th>Yorum Yapanın İsmi</th>
            <th>Yorum</th>
            <th>Yorum Yayın Tarihi</th>
            <th>Yorum Cevabı</th>
            <th>Sil</th>
            <th>Sitede Görüntüle</th>
        </tr>
    </tfoot>
</table>